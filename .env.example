PORT=8080
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# JWT
JWT_KEYS=k1:supersecret1,k2:supersecret2
JWT_SKEW=2m

# Mock / Backoff
MOCK_ENABLED=true
BACKOFF_MAX=30s

# Metrics BasicAuth
METRICS_USER=metrics
